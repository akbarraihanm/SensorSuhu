<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
>
    <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/normal"
            android:contentDescription="@string/gambar_background"
            app:layout_constraintTop_toTopOf="parent"
            android:outlineSpotShadowColor="#000"
            android:outlineAmbientShadowColor="#000"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="44sp"
              android:text="NORMAL"
              android:textColor="#fff"
              android:textStyle="bold"
              android:textAlignment="center"
              app:layout_constraintBottom_toBottomOf="@+id/image_background" android:layout_marginBottom="16dp"
              android:id="@+id/textStatus"/>
    <Button android:layout_width="match_parent" android:layout_height="0dp"
            android:text="@string/auto"
            android:id="@+id/auto_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#fff"
            android:background="@drawable/curved"
            android:visibility="invisible"
    />

    <FrameLayout

            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/image_background"
            app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>