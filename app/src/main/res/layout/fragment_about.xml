<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".AboutFragment">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="About"
                  android:textSize="28sp"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:layout_marginBottom="18dp"
        />
        <Space android:layout_width="match_parent" android:layout_height="15dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1"
            >
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Irfan Erfolgi Hanan"
                          android:textStyle="bold"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="1534010007"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textStyle="italic"
                          android:text="Programmer"
                />
            </LinearLayout>

            <ImageView android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/coldlampon"
            />

        </LinearLayout>
        <Space android:layout_width="match_parent" android:layout_height="15dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <ImageView android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/coldlampon"
            />
            <Space android:layout_width="25dp" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Akbar Raihan Maghribi"
                          android:textStyle="bold"
                          android:textAlignment="textEnd"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="1534010008"
                          android:textAlignment="textEnd"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textStyle="italic"
                          android:text="Programmer"
                          android:textAlignment="textEnd"
                />
            </LinearLayout>
        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="15dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Muhammad Syafril Hidayat"
                          android:textStyle="bold"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="1634010055"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textStyle="italic"
                          android:text="UI/UX Designer"
                />
            </LinearLayout>
            <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <ImageView android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/coldlampon"
            />

        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="15dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <ImageView android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/coldlampon"
            />
            <Space android:layout_width="25dp" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="M. Hafidz Amarul Marufi"
                          android:textStyle="bold"
                          android:textAlignment="textEnd"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="1634010057"
                          android:textAlignment="textEnd"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textStyle="italic"
                          android:text="System Analyst"
                          android:textAlignment="textEnd"
                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>